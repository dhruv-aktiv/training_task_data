<odoo>
    <record model="ir.ui.view" id="student_mail_wizard">
        <field name="name">student Mail sending</field>
        <field name="model">task.mail.sending.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="student mail form">
                <group>
                    <field name="email_to"/>
                    <field name="student_ids" widget="many2many_tags"/>
                    <field name="subject"/>
                    <field name="student_body"/>
                    <field name="stu_id"/>
                    <field name="attachment_ids" widget="many2many_binary"/>
                </group>
                <footer>
                    <button name="send_email_button" string="Send" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



          <record id="student_mail_wizard_menu_action" model="ir.actions.act_window">
            <field name="name" >Student Send Mail(M2M)</field>
            <field name="res_model" >task.mail.sending.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
             <field name="context">{'default_student_ids': [(6,[active_id])]}</field>
          </record>

</odoo>