<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Tree View for Course-->
    <record id="food_tree_view" model="ir.ui.view">
      <field name="name">food.tree.view</field>
      <field name="model">food_hub.item.detail</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field groups="food_hub.foodhub_cust" name="qty"/>
          <field name="price"/>
        </tree>
      </field>
    </record>
    <!-- Form View for Course-->
    <record id="food_form_view" model="ir.ui.view">
      <field name="name">food.form.view</field>
      <field name="model">food_hub.item.detail</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field groups="food_hub.foodhub_cust" name="qty"/>
              <field name="price"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <!-- Action -->
    <record id="food_menu_action" model="ir.actions.act_window">
      <field name="name">Food Hub</field>
      <field name="res_model">food.item.detail</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">Create The First Rec</p>
      </field>
    </record>
    <menuitem id="food_main" name="Food Hub"/>
    <menuitem action="food_menu_action" id="food_submenu" name="Food Item" parent="foodhub.food_main" groups="food_hub.foodhub_cust" />

  </data>
</odoo>